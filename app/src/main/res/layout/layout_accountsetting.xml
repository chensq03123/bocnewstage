<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/actionbar_color"
        >
        <com.balysv.materialmenu.MaterialMenuView
            android:id="@+id/accountsetting_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            app:mm_color="@android:color/white"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="shuiqiangcheng@hustunique.com"
                android:textColor="@android:color/white"
                android:textSize="17sp"/>
        <ImageView
            android:id="@+id/addnewcard_btn"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="16dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/addnewcard"
            />
        </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/accsetting_fram">
        <include layout="@layout/layout_setting"></include>
        </FrameLayout>
</LinearLayout>
